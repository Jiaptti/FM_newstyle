<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <com.fastapp.viroyal.fm_newstyle.view.layout.TRecyclerView
        android:id="@+id/play_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/popup_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_preload_btn_selector"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/close"
        android:textColor="@color/black"
        android:textSize="@dimen/text_regular_primary_size" />

</LinearLayout >